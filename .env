# MarketPulse AI Environment Configuration for Testing

# Application Settings
MARKETPULSE_APP_NAME="MarketPulse AI"
MARKETPULSE_ENVIRONMENT="testing"
MARKETPULSE_DEBUG="true"

# API Configuration
MARKETPULSE_API_HOST="localhost"
MARKETPULSE_API_PORT="8000"
MARKETPULSE_API_PREFIX="/api/v1"

# Database Configuration
MARKETPULSE_DATABASE_URL="sqlite:///./test_marketpulse.db"
MARKETPULSE_DATABASE_ECHO="false"

# Security Configuration
MARKETPULSE_SECRET_KEY="test-secret-key-for-testing-must-be-at-least-32-characters-long"
MARKETPULSE_ENCRYPTION_ALGORITHM="HS256"
MARKETPULSE_ACCESS_TOKEN_EXPIRE_MINUTES="30"

# Data Processing Settings
MARKETPULSE_MAX_BATCH_SIZE="1000"
MARKETPULSE_DATA_RETENTION_DAYS="365"
MARKETPULSE_ENABLE_DATA_ENCRYPTION="true"

# AI/ML Configuration
MARKETPULSE_MODEL_CONFIDENCE_THRESHOLD="0.7"
MARKETPULSE_MAX_SCENARIOS_PER_REQUEST="10"
MARKETPULSE_ENABLE_PROPERTY_TESTING="true"
MARKETPULSE_PROPERTY_TEST_ITERATIONS="100"

# Compliance Settings
MARKETPULSE_MRP_COMPLIANCE_STRICT="true"
MARKETPULSE_REGULATION_UPDATE_CHECK_HOURS="24"

# Performance Settings
MARKETPULSE_REQUEST_TIMEOUT_SECONDS="30"
MARKETPULSE_MAX_CONCURRENT_REQUESTS="100"
MARKETPULSE_ENABLE_CACHING="true"
MARKETPULSE_CACHE_TTL_SECONDS="300"

# Logging Configuration
MARKETPULSE_LOG_LEVEL="INFO"
MARKETPULSE_LOG_FORMAT="json"
MARKETPULSE_ENABLE_AUDIT_LOGGING="true"

# CORS Settings
MARKETPULSE_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]